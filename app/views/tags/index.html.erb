<p id="notice"><%= notice %></p>

<h1>Listing Tags for <%= @newspost.title %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', newspost_tag_path(@newspost, tag) %></td>
        <td><%= link_to 'Edit', edit_newspost_tag_path(@newspost, tag) %></td>
        <td><%= link_to 'Destroy', newspost_tag_path(@newspost, tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag for this Title', new_newspost_tag_path(@newspost) %>
<%= link_to 'Back to Newsposts', newsposts_path %>
