<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Postal code</th>
      <th>City</th>
      <th>Phone number</th>
      <th>Hours</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td><%= location.postal_code %></td>
        <td><%= location.city %></td>
        <td><%= location.phone_number %></td>

        <td>
          <ul>
            <% location.hours.each do |hour| %>
            <li><%= hour.start.strftime('%H:%M') %> to <%= hour.end.strftime('%H:%M') %> <%= hour.crowd %> </li>  
            <% end %>
          </ul>
        </td>

        <td><%= link_to 'Add Hours', new_location_hour_path(location.id) %></td>
        <td><%= link_to 'View Hours', location_hours_path(location.id) %> </td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

