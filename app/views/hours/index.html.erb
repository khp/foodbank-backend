<p id="notice"><%= notice %></p>

<h1>Listing Hours for <%= @location.name %></h1>

<table>
  <thead>
    <tr>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= hour.start.strftime('%H:%M') %></td>
        <td><%= hour.end.strftime('%H:%M') %></td>
        <td><%= hour.crowd %></td>
        <td><%= link_to 'Show', location_hour_path(@location, hour) %></td>
        <td><%= link_to 'Edit', edit_location_hour_path(@location, hour) %></td>
        <td><%= link_to 'Destroy', location_hour_path(@location, hour), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

